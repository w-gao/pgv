{
  "compilerOptions": {
    "baseUrl": "packages",
    "lib": [
      "ESNext"
    ],
    "module": "ESNext",
    "target": "ESNext",
    "sourceMap": true,
    "declaration": true,
    "esModuleInterop": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true
  },
  "references": [
    { "path": "./packages/core" }
  ],
  "exclude": [
    "node_modules"
  ]
}
